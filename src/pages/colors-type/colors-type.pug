extends ../../layout/ui-base/ui-base

include ../../components/colors/colors
include ../../components/type/type

block title 
    | Colors & Type
block content
    .colors-type
        .colors-type__wrapper-colors
            +colors({
                modifier: 'dark-100',
                name: 'Dark Shade 100%',
                value: '#1F2041'
            })
            +colors({
                modifier: 'dark-75',
                name: 'Dark Shade 75%',
                value: '#1F2041'
            })
            +colors({
                modifier: 'dark-50',
                name: 'Dark Shade 50%',
                value: '#1F2041'
            })
            +colors({
                modifier: 'dark-25',
                name: 'Dark Shade 25%',
                value: '#1F2041'
            })
            +colors({
                modifier: 'dark-5',
                name: 'Dark Shade 5%',
                value: '#1F2041'
            })
            +colors({
                modifier: 'purple',
                name: 'Purple',
                value: '#BC9CFF'
            })
            +colors({
                modifier: 'green',
                name: 'Green',
                value: '#6FCF97'
            })
        .colors-type__wrapper-type
            +type({
                element: 'h1',
                tag: 'H1',
                text: 'This one is the sub-section or widget title'
            })
            +type({
                element: 'h2',
                tag: 'H2',
                text: 'Next one is the item title inside widgets'
            })
            +type({
                element: 'h3',
                tag: 'H3',
                text: 'This is a label or CTA text'
            })
            +type({
                element: 'body',
                tag: 'Body',
                text: 'This is the body text which is used for most <br /> of the design, like paragraphs, lists, etc.'
            })
    